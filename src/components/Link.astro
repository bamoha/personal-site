---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  noTransition?: boolean;
}

const { href, external, underline = true, noTransition = false, ...rest } = Astro.props;
---

<a 
  href={href} 
  target={ external ? "_blank" : "_self" } 
  class={cn(
    "inline-block decoration-black/15 dark:decoration-white/30 hover:decoration-black/25 hover:dark:decoration-white/50 text-current hover:text-black hover:dark:text-[#d1d5db]",
    !noTransition && "transition-colors duration-150 ease-in-out",
    underline && "underline underline-offset-2"
  )}
  {...rest}>
  <slot/>
</a>
