---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import SharePost from "@components/SharePost.astro";
import ArrowCard from "@components/ArrowCard.astro";
import { readingTime } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";
import { SEO } from "@consts";

export async function getStaticPaths() {
  const posts = (await getCollection("blog"))
    .filter(post => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post, allPosts: posts },
  }));
}

type Props = {
  post: CollectionEntry<"blog">;
  allPosts: CollectionEntry<"blog">[];
};

const { post, allPosts } = Astro.props;
const { Content } = await post.render();
const postUrl = new URL(Astro.url.pathname, Astro.site).toString();

// Extract tags from post if available
const tags = post.data.tags || [];

// Get other posts (excluding current one) and shuffle them
const otherPosts = allPosts
  .filter(p => p.slug !== post.slug)
  .sort(() => Math.random() - 0.5)
  .slice(0, 3);
---

<PageLayout 
  title={post.data.title} 
  description={post.data.description || ""}
  article={{
    publishedTime: post.data.date,
    author: SEO.AUTHOR,
    tags: tags
  }}
>
  <Container>
    <div class="animate">
      <BackToPrev href="/blog">
        Back
      </BackToPrev>
    </div>
    <div class="space-y-1 my-10">
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={post.data.date} />
        </div>
        &bull;
        <div class="font-base text-sm">
          {readingTime(post.body)}
        </div>
      </div>
      <div class="animate text-2xl font-semibold text-black dark:text-[#d1d5db]">
        {post.data.title}
      </div>
    </div>
    <article class="animate">
      <Content />
      <SharePost title={post.data.title} url={postUrl} />
    </article>
    
    {otherPosts.length > 0 && (
      <section class="animate mt-16 pt-8 border-t border-black/10 dark:border-white/10">
        <h2 class="font-semibold text-black dark:text-[#d1d5db] mb-4">
          You might also like
        </h2>
        <ul class="flex flex-col gap-4">
          {otherPosts.map((otherPost) => (
            <li>
              <ArrowCard entry={otherPost} />
            </li>
          ))}
        </ul>
      </section>
    )}
  </Container>
</PageLayout>